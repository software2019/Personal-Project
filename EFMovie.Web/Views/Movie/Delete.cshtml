@model Movie
<nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Movies" asp-action="Index">Movies</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
</nav>
 
<h3 class="mb-4 mb-4">Delete Movie</h3>
<h4 class="mb-4">Are you sure you want to delete this Movie?</h4>

<div>
    <!-- display the movie to be deleted using a <dl> -->
    <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>
    
            <dt class="col-sm-3">Director</dt>
            <dd class="col-sm-9">@Model.Director</dd>
        
            <dt class="col-sm-3">Year</dt>
            <dd class="col-sm-9">@Model.Year</dd>

            <dt class="col-sm-3">Budget</dt>
            <dd class="col-sm-9">$@Model.Budget million</dd>

            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Genre</dd>

            <dt class="col-sm-3">Cast</dt>
            <dd class="col-sm-9">@Model.Cast</dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@Model.Duration mins</dd> 

            <dt class="col-sm-3">Rating</dt>
            <dd class="col-sm-9">@Model.Rating% </dd> 

            <dt class="col-sm-3">Plot</dt>
            <dd class="col-sm-9">@Model.Plot</dd> 
    </dl>  


   <form asp-action="DeleteConfirmed">
       
       <!-- Hides Id - no need to display -->
      <input type="hidden" asp-for="Id" class="form-control"/>

      <!-- create a form to submit the post request to/student/delete -->
       <div class="form-group">
          <input type="submit" value="Delete" class="btn btn-danger"/>
         <!-- <a class="btn btn-secondary" asp-action="Index">Cancel</a> -->
          |<a asp-action="Index" class="btn btn-sm btn-default"> Back to List</a>
      </div>

    </form>  

</div>