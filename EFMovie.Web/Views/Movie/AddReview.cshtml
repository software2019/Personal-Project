 @model Review

 <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Movies" asp-action="Index">Movies</a></li>
            <li class="breadcrumb-item"><a asp-controller="Details" asp-action="Index">Details</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add Review</li>
        </ol>
</nav>
 
<h3 class="mt-4 mb-4">Add Review</h3>

<form asp-action="AddReview">
    <!-- add a hidden input for MovieId -->
    <input type="hidden" asp-for="MovieId" class="form-control"/>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="container con-vis">
        <div class="row row-vis" style="padding-bottom:25px">
            <div class="col-4 col-vis">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>

     <div class="container con-vis">
        <div class="row row-vis" style="padding-bottom:25px">
            <div class="col-6 col-vis">
                <label asp-for="Comment">Comment</label>
                <textarea rows="5" class="form-control" asp-for="Comment"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>
    </div>

     <div class="container con-vis">
        <div class="row row-vis" style="padding-bottom:25px">
            <div class="col-2 col-vis">
                <label asp-for="Rating">Rating</label>
                <input asp-for="Rating" class="form-control"/>
                <span asp-validation-for="Rating" class="text-danger"></span>
                <padding-bottom:10px></padding-bottom:>
            </div>
        </div>
     </div>
     <div class="form-group">
         <input type="submit" value="Save" class="btn btn-primary"/>
         <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.MovieId>Cancel</a>
     </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}